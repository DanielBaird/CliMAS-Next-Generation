
<form class="formblocks">
    <fieldset class="wide">
        <input id="speciesname" name="speciesname" placeholder="&hellip; type a species name &hellip;" />
    </fieldset>

    <fieldset class="formblock timepoint">
        <h3 for="timepoint">Select a year</h3>
        <label><input type="radio" name="timepoint" value="baseline" checked="checked">baseline</label>
        <label><input type="radio" name="timepoint" value="2025">2025</label>
        <label><input type="radio" name="timepoint" value="2035">2035</label>
        <label><input type="radio" name="timepoint" value="2045">2045</label>
        <label><input type="radio" name="timepoint" value="2055">2055</label>
        <label><input type="radio" name="timepoint" value="2065">2065</label>
        <label><input type="radio" name="timepoint" value="2075">2075</label>
        <label><input type="radio" name="timepoint" value="2085">2085</label>
    </fieldset>

    <fieldset class="formblock scenario">
        <h3>Select a scenario</h3>
        <label><input type="radio" name="scenario" value="RCP3PD">RCP 3PD</label>
        <label><input type="radio" name="scenario" value="RCP45">RCP 4.5</label>
        <label><input type="radio" name="scenario" value="RCP6">RCP 6</label>
        <label><input type="radio" name="scenario" value="RCP85" checked="checked">RCP 8.5</label>
    </fieldset>

    <fieldset class="formblock gcm">
        <h3>Select a climate model</h3>
        <label><input type="radio" name="gcm" value="all" checked="checked">median across models</label>
        <!--
        <label><input type="radio" name="gcm" value="10th">10th percentile across models</label>
        <label><input type="radio" name="gcm" value="90th">90th percentile across models</label>
        -->
        <label><input type="radio" name="gcm" value="cccma-cgcm31">CCCMA CGCM 3.1</label>
        <label><input type="radio" name="gcm" value="csiro-mk30">CSIRO Mark 3.0</label>
        <label><input type="radio" name="gcm" value="ukmo-hadgem1">UK Met Office HadGEM v1</label>
    </fieldset>

    <fieldset class="wide">
        <button id="showmap" type="button" class="bigbutton switchpage" data-targetpage="speciesshowingpage">show the map</button>
    </fieldset>
</form>
